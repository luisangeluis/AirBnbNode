{
  "openapi": "3.0.1",
  "info": {
    "title": "API Rest Clon de Airbnb",
    "description": "Api para imitar las funciones de la pagina Airbnb",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "'description": "una url"
    },
    {
      "url": "https://airbnb-clone.onrender.com",
      "'description": "https://airbnb-clone.onrender.com"
    }
  ],
  "paths": {
    "/api/v1/users": {
      "get": {
        "summary": "Get all my users",
        "tags": [
          "Users"
        ],
        "description": "Get all mi users",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "aplication/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "uuid",
                      "description": "The user ID"
                    },
                    "firstName": {
                      "type": "string",
                      "description": "The first name of the user"
                    },
                    "lastName": {
                      "type": "string",
                      "description": "The last name of the user"
                    },
                    "email": {
                      "type": "string",
                      "description": "The email of the user"
                    },
                    "profileImage": {
                      "type": "image",
                      "description": "The profile picture of the user"
                    }
                  }
                },
                "example": {
                  "items": 2,
                  "users": [
                    {
                      "id": "74cd6011-7e76-4d6d-b25b-1d6e4182ec2f",
                      "firstName": "Sahid",
                      "lastName": "Kick",
                      "email": "sahid.kick@academlo.com",
                      "roleId": "5ee551ed-7bf4-44b0-aeb5-daaa824b9473",
                      "profileImage": "asd.com",
                      "status": "active"
                    },
                    {
                      "id": "3bd244ca-7a80-4f1f-9732-019871f53a54",
                      "firstName": "Luis",
                      "lastName": "Zepeda",
                      "email": "luis@academlo.com",
                      "profileImage": "asd.com",
                      "status": "active"
                    }
                  ]
                }
              }
            },
            "required": "true"
          },
          "400": {
            "description": "We get an error message if the request is not resolved",
            "content":{
              "aplication/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "message":{
                      "type":"string",
                      "description":"Error message" 
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/users/{id}": {
      "get": {
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID del usuario",
            "required": true,
            "type": "string"
          }
        ],
        "description": "Get one user by Id",
        "tags": [
          "Users"
        ],
        "responses": {
          "200": {
            "description": "We successfully get one user"
          },
          "400": {
            "description": "We get an error if the request is not resolved"
          }
        }
      }
    }
  }
}